<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:background="@drawable/login"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <TextView
        android:id="@+id/editpost_txteditpost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="Editar Postagem"
        android:textSize="20sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/editpost_txtValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editpost_txteditpost"
        android:text="Valor:"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editpost_post_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_alignParentStart="false"
        android:layout_below="@id/editpost_txtValue"
        android:layout_marginTop="15dp"
        android:background="@drawable/inputs"
        android:ems="10"
        android:hint="0,00"
        android:inputType="numberDecimal"
        android:textAlignment="viewStart" />


    <TextView
        android:id="@+id/editpost_txtpost_Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editpost_post_value"
        android:layout_marginTop="15dp"
        android:text="Descrição:"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editpost_post_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_alignParentStart="false"
        android:layout_below="@id/editpost_txtpost_Description"
        android:layout_marginTop="15dp"
        android:background="@drawable/inputs"
        android:hint="Escreva sua postagem..."
        android:inputType="textMultiLine" />

</RelativeLayout>